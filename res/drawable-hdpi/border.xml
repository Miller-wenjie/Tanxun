<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
<item>
    <shape>
        <solid android:color="#eaeae8"/>
         <corners android:radius="35dp" /> 
    </shape>
</item>
 <!-- 此处定义只有下边有边框 高度为2像素-->
<item
    android:bottom="2dp"
    >
    <!--边框里面背景颜色 白色-->
    
    <shape >
        <solid android:color="#ffffff" />
    </shape>
</item>
</layer-list>
